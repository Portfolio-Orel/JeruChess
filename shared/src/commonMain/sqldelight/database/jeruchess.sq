-- Club --
getClub:
SELECT *
FROM clubDataEntity;

insertClub:
INSERT OR REPLACE
 INTO clubDataEntity (
    address,
    phone,
    email,
    website,
    facebook,
    instagram,
    twitter
) VALUES (?, ?, ?, ?, ?, ?, ?);

deleteClub:
DELETE FROM clubDataEntity
WHERE address = ?;

updateClub:
UPDATE clubDataEntity
SET address = ?,
    phone = ?,
    email = ?,
    website = ?,
    facebook = ?,
    instagram = ?,
    twitter = ?;
-- Club --


